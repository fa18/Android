<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:background="#AAA"
        />

    <TextView
        android:text="nom"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/nom"
        android:layout_marginStart="16dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/photo" />

    <TextView
        android:text="codeBarre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeBarre"
        android:layout_below="@+id/photo"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="Description du produit"
        android:layout_below="@+id/nom"
        android:layout_alignStart="@+id/nom" />

    <TextView
        android:text="categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categorie"
        android:layout_above="@+id/codeBarre"
        android:layout_alignStart="@+id/description" />

    <TextView
        android:id="@+id/emplacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Emplacement"
        android:layout_below="@+id/magasin"
        android:layout_alignStart="@+id/magasin" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        tools:text="prix"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_alignBaseline="@+id/nom"
        android:layout_alignBottom="@+id/nom"
        android:layout_toEndOf="@+id/description" />

    <TextView
        android:text="magasin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/magasin"
        android:layout_below="@+id/codeBarre"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="quantite disponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantite"
        android:layout_below="@+id/emplacement"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/promotion"
        android:textColor="@android:color/holo_red_light"
        android:layout_alignBaseline="@+id/emplacement"
        android:layout_alignBottom="@+id/emplacement"
        android:layout_toEndOf="@+id/categorie" />

    <TextView
        android:text="quantite commandee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantiteCommandee"
        android:layout_below="@+id/quantite"
        android:layout_toStartOf="@+id/promotion" />


</RelativeLayout>